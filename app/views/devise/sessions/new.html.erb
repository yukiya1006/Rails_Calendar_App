<div class="box2">
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <h1>Log in</h1>
    <div class="box-email">
      <%= f.label :email, "E-mail" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "password" %>
        </div>
        <div class="column-right">
          <%= link_to "If you forget your password", new_user_password_path %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="box-login">
      <%= f.submit "Log in" %>
      <% if devise_mapping.rememberable? %>
      <div class="remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember, "keep login" %>
      </div>
      <% end %>
    </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 新規登録はこちらです <span>------------</span></p>
      <%= link_to "新規登録", new_user_registration_path %>
    </div>
  </div>
</div>